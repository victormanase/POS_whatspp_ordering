# Docker Environment Configuration
# Copy this file to .env.local and customize for your deployment

# Database Configuration
DB_ROOT_PASSWORD=secure_root_password_123
DB_NAME=pos_system
DB_USER=pos_user
DB_PASSWORD=secure_pos_password_123

# Redis Configuration
REDIS_PASSWORD=secure_redis_password_123

# Flask Application
SECRET_KEY=your-very-long-and-secure-secret-key-for-production-change-this
FLASK_ENV=production

# Business Settings
DEFAULT_CURRENCY=TSH
DEFAULT_TAX_RATE=0.18
BUSINESS_NAME=Your POS Business
BUSINESS_ADDRESS=123 Business Street, City, Country
BUSINESS_PHONE=+255123456789
BUSINESS_EMAIL=info@yourposbusiness.com

# WhatsApp Integration (Optional)
WHATSAPP_TOKEN=your_whatsapp_business_api_token
WHATSAPP_PHONE_ID=your_phone_number_id
WEBHOOK_VERIFY_TOKEN=your_webhook_verify_token

# Email Configuration (Optional)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_password

# File Upload Settings
MAX_CONTENT_LENGTH=16777216
UPLOAD_FOLDER=/app/app/static/uploads

# Security Settings
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

# Backup Settings
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30